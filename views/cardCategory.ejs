<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style.css" />
    <title>Category</title>
  </head>
  <body>
    <h1>My Flash Cards</h1>
    <h2>Add A Category:</h2>

    <form action="/cardCategory/createFlashCardCategory" method="POST">
      <input type="text" placeholder="Title" name="categoryTitle" />
      <input type="submit" />
    </form>

    <ul class="allCards">
      <% categories.forEach( el => { %>
      <li class="card-box card category" data-id="<%=el._id%>">
        <p><%= el.title %></p>
        <span class="showCards"
          ><a href="cardCategory/flashCardItems">Show Cards</a></span
        >
        <span class="fa fa-trash"></span>
      </li>
      <% }) %>
    </ul>
    <script src="js/category.js"></script>
  </body>
</html>
